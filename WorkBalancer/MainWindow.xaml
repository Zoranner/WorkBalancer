<hc:Window x:Class="BalanceWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalanceWork"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ShowTitle="True"
        Title="{StaticResource WindowTitle}" 
        Height="850" 
        Width="1384">
    <hc:SimplePanel>
        <hc:ImageBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <hc:FlipClock HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <hc:NotifyIcon Token="NotifyIconToken" Text="BalanceWork" IsBlink="False" Icon="Resources/Pictures/cherry-blossom.png">
            <hc:NotifyIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{StaticResource MenuItemSetting}"/>
                    <MenuItem Command="hc:ControlCommands.ShutdownApp" Header="{StaticResource MenuItemExit}"/>
                </ContextMenu>
            </hc:NotifyIcon.ContextMenu>
        </hc:NotifyIcon>
    </hc:SimplePanel>
</hc:Window>