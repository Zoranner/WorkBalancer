<UserControl x:Class="BalanceWork.StrongNotice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:BalanceWork"
             mc:Ignorable="d">
    <hc:SimplePanel Width="320" Height="200">
        <!--<Image Source="pack://application:,,,/Resource/Image/icon.ico" VerticalAlignment="Top" Margin="10" Width="70" Height="70"/>-->
        <TextBlock x:Name="textBlock" Text="{StaticResource WindowTitle}" FontSize="30" HorizontalAlignment="Center" Margin="10,50,10,10" 
                   VerticalAlignment="Top" TextWrapping="Wrap"/>
        <Button Command="hc:ControlCommands.CloseWindow" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Close" 
                HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10"/>
    </hc:SimplePanel>
</UserControl>
